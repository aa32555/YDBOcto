  export ydb_mstack_size=10000
  octo <<OCTO &>output.txt
select c.relnamespace, n.oid from pg_catalog.pg_namespace n, pg_catalog.pg_class c
WHERE n.oid = c.relnamespace;
OCTO
  verify_output TSQ007 output.txt
}
