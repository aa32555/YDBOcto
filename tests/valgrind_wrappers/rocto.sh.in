# NB: exec is VERY IMPORTANT as it makes us get the real rocto pid not the bash process pid
exec @valgrind@ \
	--tool=memcheck \
	--log-file="${BATS_TEST_NAME}-valgrind-memcheck-%p-%n.log" \
	--gen-suppressions=all \
	--suppressions="@PROJECT_SOURCE_DIR@/tools/ci/ignored-valgrind-errors.supp" \
	--leak-check=full \
	--track-origins=yes \
	@PROJECT_BINARY_DIR@/src/rocto \
	"${@:1}"
	# Add this line to generate suppressions
