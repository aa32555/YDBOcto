load test_helpers

setup() {
  init_test
  createdb
  load_fixture names.sql
  load_fixture names.zwr
  start_rocto 1338
}

teardown() {
  stop_rocto
}

@test "test psql authentication with bad password" {
  create_user jon tester
  run run_psql_auth jon tested 1338 <<OCTO
SELECT * FROM names;
OCTO
  [[ "$status" -eq 2 ]]
  echo $output 2>&1 | tee output.txt
  [[ "$output" =~ "password doesn't match stored value" ]]
  delete_users jon
}

@test "test psql authentication with non-existent user" {
  create_user jon tester
  run run_psql_auth bobby cereal 1338 <<OCTO
SELECT * FROM names;
OCTO
  echo $output 2>&1 | tee output.txt
  [[ "$status" -eq 2 ]]
  [[ "$output" =~ "failed to retrieve user info from database" ]]
  delete_users jon
}

@test "test psql authentication with one user" {
  create_user jon tester
  run_psql_auth jon tester 1338 <<OCTO 2>&1 | tee output.txt
SELECT * FROM names;
OCTO
  delete_users jon
  [[ "$(grep -c -E "Zero.\+|Cool" output.txt)" == "2" ]]
}

@test "test psql authentication with two users" {
  create_user jon tester
  run_psql_auth jon tester 1338 <<OCTO 2>&1 | tee output.txt
SELECT * FROM names;
OCTO
  [[ "$(grep -c -E "Zero.\+|Cool" output.txt)" == "2" ]]

  create_user bobby bilco
  run_psql_auth bobby bilco 1338 <<OCTO 2>&1 | tee output.txt
SELECT * FROM names;
OCTO
  delete_users jon bobby
  [[ "$(grep -c -E "Zero.\+|Cool" output.txt)" == "2" ]]
}

