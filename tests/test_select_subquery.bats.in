  yottadb -run genqueryfiles TSS04.sql	# this generates query files of the form TSS04_01.sql, TSS04_02.sql ...
  for file in TSS04_*.sql
  do
    run_query_in_octo_and_postgres_and_crosscheck names $file "remove_empty_line_at_tail"
  done
}

